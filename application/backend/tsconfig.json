{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "removeComments": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    ".nvm",
    "jest.config.ts",
    "node_modules",
    "tests"
  ],
  "watchOptions": {
    "excludeDirectories": [
      "**/node_modules",
      ".*/**",
      "tests"
    ]
  }
}